<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomTheme" parent="Theme.AppCompat" >
        <item name="colorPrimary">@color/emoRenee</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="windowNoTitle">false</item>
        <item name="windowActionBar">true</item>
    </style>

    <style name="LongDivider" parent="CustomTheme">
        <item name="android:background">@color/darkerEmoRenee</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
    </style>

    <style name="ShortDivider" parent="CustomTheme">
        <item name="android:background">@color/shortDividerColor</item>
        <item name="android:layout_height">2dp</item>
    </style>

</resources>
